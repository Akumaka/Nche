<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/click"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c_time"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="Time"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_code"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="Code"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_unique"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="Unique"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_model"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="Model"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_name"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="Name"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_email"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="Email"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_phone"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="@string/complains_phone"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_remarks"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="Remarks"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_attach"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_18ssp"
                android:text="Attachment"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:background="@drawable/recycler_view_borders"
                android:textStyle="bold" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>