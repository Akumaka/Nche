<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyComplain">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorUserLoginTitle"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/app_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/search_bar_bg"
            android:drawableEnd="@drawable/ic_search"
            android:padding="@dimen/_6sdp"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/_16ssp" />

        <Spinner
            android:id="@+id/spinner_complain_type"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_weight="1"
            android:entries="@array/complain_type_array"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/a_c_time"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="Time"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a_c_code"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="Reg. No."
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a_c_unique"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="Unique Code"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a_c_model"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="Model"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/a_c_name"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="Name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a_c_email"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="Email"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a_c_phone"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/complains_phone"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a_c_remarks"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="Remarks"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a_c_attach"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/recycler_view_headers_borders"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:text="Attachment"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_my_complains"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>